    <div class="field">
      <%= form.label :passowrd, "Password" %>
      <%= form.password_field :password, id: :password %>
    </div>

    <% form.hidden_field :password
      hidden_field_tag 'selected', random_password
    %>

    <div class="actions">
      <%= form.submit %>
    </div>
  <% end %>

  <%= link_to 'Back', users_path %>
<% else %>

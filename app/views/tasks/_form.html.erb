<%= form_with(model: task, local: true) do |form| %>
  <% if task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(task.errors.count, "error") %> prohibited this task from being saved:</h2>

      <ul>
      <% task.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description, id: :task_description %>
  </div>

  <div class="field">
    <%= form.label :date %>
    <%= form.date_select :date, id: :task_date %>
  </div>

  <div class="field">
    <%= form.label :time %>
    <%= form.time_select :time, id: :task_time %>
  </div>

  <div class="field">
    <%= form.label :place %>
    <%= form.text_field :place, id: :task_place %>
  </div>

  <div class="field">
    <%= form.label :assigned %>
    <%= form.check_box :assigned, id: :task_assigned %>
  </div>

  <div class="field">
    <%= form.label :no_of_people %>
    <%= form.number_field :no_of_people, id: :task_no_of_people %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>

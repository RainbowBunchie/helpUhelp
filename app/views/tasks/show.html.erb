      <div class="task-card">
    <% end %>
      <p><%= User.find(applicant.user_id).first_name %> <%= User.find(applicant.user_id).last_name %></p>
      <p><%= User.find(applicant.user_id).telephone %></p>
      <%= link_to 'zuweisen', assign_user_task_path(@task, applicant_id: applicant.user_id), method: :post%>
    </div>
    <% end %>




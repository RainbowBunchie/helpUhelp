

<div class="form-login">
  <div class="form-container">
    <h1>Einloggen</h1>
      
    <%= form_tag login_path do |f| %>
        <%= text_field_tag     :email, nil, placeholder: 'E-Mail' %> <br>
        <%= password_field_tag :password, nil, placeholder: 'Passwort' %> <br>

        <%= submit_tag 'Einloggen' %>
    <% end %>
  </div>
</div>
